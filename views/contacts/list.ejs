<%- include ('../partials/header') %>

    <!-- <%= ContactList %> -->

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <h1><%= title %></h1>
        <br>
        <div>
            <a href="/contacts/add" class="btn btn-primary align-self-end mb-2" role="button">
                <i class="fa-solid fa-plus"></i>
                &nbsp;&nbsp;Add a new Contact
            </a>                
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">First Name</th>
                    <th class="text-center">Last Name</th>
                    <th class="text-center">Contact Number</th>
                    <th class="text-center">Email</th>
                    <th class="text-center" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < ContactList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= ContactList[count].firstName %></td>
                        <td class="text-center"><%= ContactList[count].lastName %></td>
                        <td class="text-center"><%= ContactList[count].number %></td>
                        <td class="text-center"><%= ContactList[count].email %></td>
                        <td class="text-center">
                            <a href="/contacts/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fa-solid fa-pen-to-square"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/contacts/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  <%- include ('../partials/footer') %>